<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="imeButtonStyle">@style/IMEButtonTheme</item>
        <item name="imeBackground">@color/buttonRelease</item>
        <item name="imeForeground">@color/buttonText</item>
        <item name="imeHeight">220dp</item>
        <item name="imeImageSize">16sp</item>
    </style>

    <style name="IMEButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ime_button</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:height">0</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteTheme" parent="AppTheme">
        <item name="imeButtonStyle">@style/IMEButtonWhiteTheme</item>
        <item name="imeBackground">@color/buttonText</item>
        <item name="imeForeground">@color/buttonClick</item>
    </style>

    <style name="IMEButtonWhiteTheme" parent="IMEButtonTheme">
        <item name="android:background">@drawable/ime_button_white</item>
        <item name="android:textColor">@color/buttonClick</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="imeButtonStyle">@style/IMEButtonBlueTheme</item>
        <item name="imeBackground">@color/buttonBlue1</item>
        <item name="imeForeground">@color/buttonOrange</item>
    </style>

    <style name="IMEButtonBlueTheme" parent="IMEButtonTheme">
        <item name="android:background">@drawable/ime_button_blue</item>
        <item name="android:textColor">@color/buttonOrange</item>
    </style>

</resources>
