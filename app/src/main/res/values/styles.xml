<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="imeButtonStyle">@style/IMEButtonTheme</item>
        <item name="imeBackground">@color/buttonRelease</item>
        <item name="imeHeight">200dp</item>
    </style>

    <style name="IMEButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ime_button</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
